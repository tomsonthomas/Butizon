<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/adapterbackground"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image"
        android:src="@drawable/ac"
        android:foreground="@drawable/foreground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apusername"
            android:fontFamily="@font/robotoregular"
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/colorblack"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apphone"
            android:fontFamily="@font/robotoregular"
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/colorblack"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apservice"
            android:fontFamily="@font/robotoregular"
            android:textSize="@dimen/textsize_medium"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apemployee"
            android:textColor="@color/colorblack"
            android:fontFamily="@font/robotoregular"
            android:textSize="@dimen/textsize_medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apdate"
            android:fontFamily="@font/robotoregular"
            android:textSize="@dimen/textsize_medium"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="1dp"
                android:layout_weight=".2"
                android:background="@drawable/custom_edittext"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorpink"
                android:text="Cancel"
                android:id="@+id/cancel"
                android:fontFamily="@font/robotoregular"
                android:textSize="@dimen/textsize_medium"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_weight=".2"
                android:background="@drawable/backgrounndviewall"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/apedit"
                android:fontFamily="@font/robotoregular"
                android:textSize="@dimen/textsize_medium"
                />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:background="@drawable/custom_edittext"
            android:layout_height="wrap_content"
            android:text="Accept"
        android:textColor="@color/colorpink"
            android:gravity="center"
            android:id="@+id/apapprove"
            android:fontFamily="@font/robotoregular"
            android:textSize="@dimen/textsize_medium"

            />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>