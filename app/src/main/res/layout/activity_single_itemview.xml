<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorwhite"
    android:id="@+id/servicelayout"

    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/serviceimage"
                android:src="@drawable/ac"/>

            <LinearLayout
                android:id="@+id/servicedetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/serviceimage"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/servicesname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/robotoregular"
                    android:singleLine="true"
                    android:text="OYO 14976 Ritu Beach Resort"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/textsize_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/robotoregular"
                    android:singleLine="true"
                    android:text="Loard matha church, Vadackal Beach Road, Punnapra North Alleppey, Alappuzha"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/textsize_large"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/serviceaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_tin"
                    android:singleLine="true"
                    android:text="Loard matha church, Vadackal Beach Road, Punnapra North Alleppey, Alappuzha"
                    android:textSize="@dimen/textsize_large"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/shoptime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_tin"
                    android:singleLine="true"
                    android:text="Loard matha church, Vadackal Beach Road, Punnapra North Alleppey, Alappuzha"
                    android:textSize="@dimen/textsize_large"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/servicerate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/robotobold"
                    android:singleLine="true"
                    android:text="â‚¹ 749 "
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/textsize_large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/feedback"
                android:layout_below="@+id/servicedetails"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_feedback"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgrounndviewall"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center"
                    android:textColor="@color/colorwhite"
                    android:textStyle="normal"
                    android:layout_marginLeft="15dp"
                    android:text="Hide Feedback"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/send_feedback"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/backgrounndviewall"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center"
                    android:textColor="@color/colorwhite"
                    android:textStyle="normal"
                    android:layout_marginRight="15dp"
                    android:text="send Feedback"
                    android:textSize="18dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedback"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/itembackground"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/booknow"
                    android:textSize="@dimen/textsize_large"
                    android:background="@drawable/backgrounndviewall"
                    android:textColor="@color/colortruewhite"
                    android:fontFamily="@font/robotoregular"
                    android:text="Book Now"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>