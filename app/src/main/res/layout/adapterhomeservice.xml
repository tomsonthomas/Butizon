<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:background="@color/colortruewhite"
    android:id="@+id/servicelayout"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:foreground="@drawable/foreground"
        android:background="@drawable/itembackground"
        android:id="@+id/serviceimage"
        android:src="@drawable/threading"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serviceshopname"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/colorblack"
        android:fontFamily="@font/roboto_tin"
        android:textSize="@dimen/textsize_medium"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serviceaddress"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/roboto_tin"
        android:textColor="@color/colordgrey"
        android:textStyle="bold"
        android:singleLine="true"
        android:textSize="@dimen/textsize_medium"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/servicerate"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/robotoregular"
        android:textColor="@color/colorblack"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/textsize_medium" />
    </LinearLayout>

</LinearLayout>