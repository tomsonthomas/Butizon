<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/adapterbackground"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/image"
            android:src="@drawable/ac"
            android:foreground="@drawable/foreground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/apusername"
                android:fontFamily="@font/robotoregular"
                android:textSize="@dimen/textsize_large"
                android:textColor="@color/colorblack"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/apphone"
                android:fontFamily="@font/robotoregular"
                android:textSize="@dimen/textsize_large"
                android:textColor="@color/colorblack"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/apservice"
                android:fontFamily="@font/robotoregular"
                android:textSize="@dimen/textsize_medium"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/apemployee"
                android:textColor="@color/colorblack"
                android:fontFamily="@font/robotoregular"
                android:textSize="@dimen/textsize_medium"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="1dp"
                    android:layout_weight=".2"
                    android:background="@drawable/custom_edittext"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorpink"
                    android:hint="Waiting time(mins)"
                    android:inputType="number"
                    android:id="@+id/cancel"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="@dimen/textsize_medium"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:background="@drawable/custom_edittext"
                    android:layout_height="32dp"
                    android:text="Submit"
                    android:textColor="@color/colorpink"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/apapprove"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="@dimen/textsize_medium"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:background="@drawable/custom_edittext"
                    android:layout_height="32dp"
                    android:text="Re-Schedule"
                    android:textColor="@color/colorpink"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="10dp"
                    android:id="@+id/update"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="@dimen/textsize_medium"

                    />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>